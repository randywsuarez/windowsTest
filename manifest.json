{
	"name": "Windows Test",
	"version": "1.2.2",
	"description": "Windows Test Application for ISPT Services",
	"author": "ISPT Services",
	"main": "electron-main.js",
	"scripts": {
		"start": "electron ."
	},
	"dependencies": {
		"electron": "^9.0.0"
	},
	"build": {
		"appId": "com.ispt.windowstest",
		"productName": "Windows Test",
		"directories": {
			"output": "dist"
		},
		"win": {
			"target": "nsis",
			"icon": "icons/icon.ico"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"shortcutName": "Windows Test"
		}
	}
}
